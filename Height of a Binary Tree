/*
    class Node 
    	int data;
    	Node left;
    	Node right;
	*/
	static int height(Node root) {
      	// Write your code here.
        Node l = root;
        Node r = root;
        int countLeft=0;
        int countRight=0;
        while(l.left!=null){
            l=l.left;
            countLeft++;
            
        }
        while(r.right!=null){
            r=r.right;
            countRight++;
            
        }
        if (countLeft > countRight)
            return countLeft;
        else
            return countRight;
    }

